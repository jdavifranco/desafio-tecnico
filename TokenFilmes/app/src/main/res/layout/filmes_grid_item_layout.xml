<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="filme"
            type="com.jdavifranco.desafio.tokenfilmes.database.Filme" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp">

        <ImageView
            android:id="@+id/filmePoster"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:contentDescription="@string/poster_description"
            android:scaleType="fitXY"
            app:imageUrl="@{filme.postUrl}"
            tools:srcCompat="@android:drawable/ic_popup_sync" />

        <TextView
            android:id="@+id/filmeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:contentDescription="@string/titulo_description"
            android:gravity="center"
            android:text="@{filme.title}"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>